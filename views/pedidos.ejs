<%- include ('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>


<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Cadastrar Pedidos</h1>
        </div>
        <div class="card-body">
            <form action="/pedidos/create" method="POST">
                <label>Número do Pedido</label>
                <input type="text" name="numero" id="numero" placeholder="Digite o numero do pedido aqui" class="form-control m2" required>
                <label>Valor do Pedido</label>
                <input type="text" name="valor" id="valor" placeholder="Digite o valor do pedido aqui" class="form-control m2" required>
                <button class="btn btn-primary mt-2">Cadastrar</button>
            </form>
        </div>
    </div>
</div>



<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Pedidos</h1>
        </div>
        <div class="card-body">
            <table>
                <thead>
                    <tr>
                        
                        <th style="padding-right: 20px;">Número: </th>
                       
                        <th>Valor: </th>
                    </tr>
                </thead>
                <tbody>
                    <% pedidos.forEach(pedido=> { %>
                        <tr>
                            <td>
                                <%= pedido.numero %>
                            </td>
                            <td>
                                <%= pedido.valor.toLocaleString('pt-br', {style: 'currency' , currency: 'BRL' })
                                    %>
                            </td>
                            <td><a href="/pedidos/edit/<%= pedido._id %>" class="btn btn-secondary m-2">Editar</a></td>
                            <td><a href="/pedidos/delete/<%= pedido._id %>" class="btn btn-danger" onclick="return confirm('Deseja excluir o registro?')">Apagar</a></td>
                            </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include ('partials/footer.ejs') %>